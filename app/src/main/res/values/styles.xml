<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>


    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@color/colorPrimary</item>
        <item name="searchCloseIcon">@drawable/ic_clear_search</item>
        <item name="searchBackIcon">@drawable/back_arrow</item>
        <item name="searchSuggestionBackground">@color/colorPrimary</item>
        <item name="searchBarHeight">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:hint">@string/searchViewHint</item>
        <item name="android:inputType">textCapWords</item>
    </style>


    <style name="EditMemoBodyStyle">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:shadowColor">#DADADA</item>
        <item name="android:padding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:hint">@string/memoBodyHint</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="EditMemoTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/memo_title_design</item>
        <item name="android:ems">10</item>
        <item name="android:hint">@string/memoTitleHint</item>
        <item name="android:textColorHint">@color/textfield_color</item>
        <item name="android:textColor">@color/textfield_color</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


</resources>
